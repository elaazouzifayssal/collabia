// Prisma Schema for Collabia

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String

  // Header Section
  name      String   // Full name
  username  String?  @unique // Username handle
  avatar    String?  // Photo URL
  location  String?  // Optional location
  bio       String?  // Short bio (max 150 chars)
  school    String?  // School/University

  // Skills & Interests (legacy - keeping for backwards compatibility)
  skills    String[] // Things user knows
  interests String[] // Things user wants to learn

  // New social/discovery fields
  currentBook    String?  // Book I'm currently reading
  currentGame    String?  // Game I'm currently playing
  currentSkill   String?  // Skill I'm currently learning
  whatImBuilding String?  // Free text describing what I'm building
  lookingFor     String?  // "Co-founder" | "Team" | "Freelance" | "Study Partner" | "Just Networking"

  // Collaboration Preferences (legacy - keeping for backwards compatibility)
  openToStudyPartner    Boolean @default(false)
  openToProjects        Boolean @default(false)
  openToAccountability  Boolean @default(false)
  openToCofounder       Boolean @default(false)
  openToHelpingOthers   Boolean @default(false)

  // Activity Signals
  lastActiveAt          DateTime @default(now())
  collaborationsStarted Int      @default(0)

  // School Verification
  schoolVerified Boolean  @default(false)
  schoolEmail    String?  // Educational email (.ac.ma, etc.)
  verifiedAt     DateTime?

  // Legacy field (keeping for backwards compatibility)
  status    String?  @default("Available")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  posts         Post[]
  interests_in  Interest[]
  sentMessages  Message[]
  conversations ConversationParticipant[]

  // Structured interests relations
  structuredBook    CurrentBook?
  structuredSkill   CurrentSkill?
  structuredGame    CurrentGame?
  bookHistory       BookHistory[]
  skillHistory      SkillHistory[]
  gameHistory       GameHistory[]

  // Interest posts relations (separate from collab posts)
  interestPosts     InterestPost[]
  interestComments  InterestComment[]
  interestLikes     InterestLike[]

  @@map("users")
}

// Collab Post model
model Post {
  id          String   @id @default(uuid())
  title       String
  description String?
  tags        String[] // Skills/interests/study topics

  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // Optional interest associations
  // Posts can be linked to a specific book, skill, or game
  interestType    String?  // 'book' | 'skill' | 'game' | null
  interestValue   String?  // The title/name of the interest (e.g., "Zero to One")

  // Progress snapshot at time of posting (for books)
  progressSnapshot Int?    // Pages read when post was created

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  interests Interest[]

  @@index([interestType, interestValue])
  @@map("posts")
}

// Interest model - tracks who clicked "Interested" on which post
model Interest {
  id        String   @id @default(uuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, postId]) // A user can only be interested in a post once
  @@map("interests")
}

// Conversation model - represents a 1-1 chat between two users
model Conversation {
  id        String   @id @default(uuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  participants ConversationParticipant[]
  messages     Message[]

  @@map("conversations")
}

// Junction table for conversation participants
model ConversationParticipant {
  id             String   @id @default(uuid())

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  joinedAt       DateTime @default(now())

  @@unique([conversationId, userId])
  @@map("conversation_participants")
}

// Message model
model Message {
  id             String   @id @default(uuid())
  content        String

  senderId       String
  sender         User     @relation(fields: [senderId], references: [id], onDelete: Cascade)

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  createdAt      DateTime @default(now())

  @@map("messages")
}

// Swipe model - tracks swipe actions between users
model Swipe {
  id        String   @id @default(uuid())

  swiperId  String   // User who swiped
  swipedId  String   // User who was swiped on

  direction String   // 'left', 'right', 'superlike'

  createdAt DateTime @default(now())
  expiresAt DateTime? // For deny list expiration (30 days for left swipes)

  @@unique([swiperId, swipedId])
  @@index([swiperId])
  @@index([swipedId])
  @@map("swipes")
}

// SwipeInterest model - 2-step interest system
// When A swipes right on B: status = 'pending' (A is interested in B)
// When B accepts: status = 'mutual' (chat created)
// When B declines: status = 'declined' (cleared)
model SwipeInterest {
  id           String   @id @default(uuid())

  senderId     String   // User who swiped right (showed interest)
  receiverId   String   // User who was swiped on

  status       String   @default("pending") // 'pending', 'mutual', 'declined'
  isSuperLike  Boolean  @default(false)
  seenBySender Boolean  @default(false) // Has the sender seen that their interest was accepted?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  respondedAt  DateTime? // When receiver responded

  @@unique([senderId, receiverId])
  @@index([senderId])
  @@index([receiverId])
  @@index([status])
  @@map("swipe_interests")
}

// Match model - tracks mutual interests (for backwards compatibility)
model Match {
  id        String   @id @default(uuid())

  user1Id   String
  user2Id   String

  createdAt DateTime @default(now())

  @@unique([user1Id, user2Id])
  @@index([user1Id])
  @@index([user2Id])
  @@map("matches")
}

// ============================================
// STRUCTURED INTERESTS WITH HISTORY TRACKING
// ============================================

// CurrentBook - Structured book tracking with progress
model CurrentBook {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title       String
  totalPages  Int?
  pagesRead   Int      @default(0)
  status      String   @default("reading") // reading | paused | completed
  startDate   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("current_books")
}

// CurrentSkill - Structured skill tracking with levels
model CurrentSkill {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name      String
  level     String   @default("beginner") // beginner | intermediate | advanced
  notes     String?
  startDate DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("current_skills")
}

// CurrentGame - Structured game tracking
model CurrentGame {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name      String
  rank      String?
  frequency String?  // daily | weekly | occasionally
  startDate DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("current_games")
}

// BookHistory - Completed/paused books archive
model BookHistory {
  id          String    @id @default(uuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  title       String
  totalPages  Int?
  pagesRead   Int?
  status      String    // completed | paused
  rating      Int?      // 1-5 stars (for completed)
  startedAt   DateTime
  finishedAt  DateTime  @default(now())

  @@index([userId])
  @@map("book_history")
}

// SkillHistory - Past skills learned
model SkillHistory {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name         String
  levelReached String   // beginner | intermediate | advanced
  notes        String?
  startedAt    DateTime
  completedAt  DateTime @default(now())

  @@index([userId])
  @@map("skill_history")
}

// GameHistory - Past games played
model GameHistory {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name       String
  rank       String?
  playedFrom DateTime
  playedTo   DateTime @default(now())

  @@index([userId])
  @@map("game_history")
}

// ============================================
// INTEREST POSTS SYSTEM (Separate from Collab Posts)
// ============================================

// InterestPost - Posts within interest communities (book clubs, skill learning, gaming)
model InterestPost {
  id        String   @id @default(uuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Interest type and value (matched by name, not ID for flexibility)
  type      String   // 'book' | 'skill' | 'game'
  interestValue String // The book title, skill name, or game name

  // For books: capture reading progress at time of posting
  progressSnapshot Int?

  content   String   // The post content (text)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  comments  InterestComment[]
  likes     InterestLike[]

  @@index([type, interestValue])
  @@index([userId])
  @@map("interest_posts")
}

// InterestComment - Comments on interest posts
model InterestComment {
  id        String   @id @default(uuid())

  postId    String
  post      InterestPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  content   String

  createdAt DateTime @default(now())

  @@index([postId])
  @@index([userId])
  @@map("interest_comments")
}

// InterestLike - Likes on interest posts
model InterestLike {
  id        String   @id @default(uuid())

  postId    String
  post      InterestPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([postId, userId]) // User can only like a post once
  @@index([postId])
  @@map("interest_likes")
}
